pico-8 cartridge // http://www.pico-8.com
version 38
__lua__

message = "Hello Pico"
screen = 128

function _draw()
  cls()
  -- ecris le message au centre de l'ecran
  print(message, screen / 2 - (#message * 4) / 2, screen / 2 + 4)
  -- dessine le sprite juste au dessus
  spr(0, screen / 2 - 4, screen / 2 - 8)
end

